<Window x:Class="Dotjosh.DayZCommander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="533" Width="948"

		
		>
    <Grid Background="#333333">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="243"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		
		<TextBlock Text="DayZ Commander"
				   Foreground="#CD3232"
				   FontWeight="Bold"
				   FontSize="24"
				   Grid.ColumnSpan="2"
				   Margin="15 8 15 8"/>
		
		<StackPanel Grid.Row="1" Grid.RowSpan="2">
			<TextBlock Text="FRIENDS LIST" 
					   FontSize="14" 
					   FontWeight="Bold"
					   Foreground="#EEE"
					   Margin="15 8 0 4"/>
		</StackPanel>
		
		<TextBlock Text="{Binding Servers.Count, StringFormat={}{0} SERVERS}"
				   FontSize="14"
				   Margin="8 8 0 4"
				   Grid.Column="1"
				   Grid.Row="1"
					  Foreground="#EEE"
				   FontWeight="Bold"/>

		<ScrollViewer BorderThickness="0" 
					  Padding="0" 
					  HorizontalScrollBarVisibility="Hidden" 
					  VerticalScrollBarVisibility="Auto"
					Grid.Row="2"
					Grid.Column="1">
			<ItemsControl ItemsSource="{Binding Servers}"
					 Margin="8 0 0 0">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<StackPanel Margin="0 4 0 4"
									Orientation="Horizontal">
							<TextBlock Text="{Binding Ping}" Foreground="#FFF" FontSize="13" Width="50"/>
							<TextBlock Text="{Binding Name}" Foreground="#FFF" FontSize="13"/>
						</StackPanel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>

		<!--
		<DataGrid ItemsSource="{Binding Servers}"
				  Visibility="Hidden"
				  Margin="8 0 0 0"
				  Grid.Row="2"
				  Grid.Column="1"
				  AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="*" />
				<DataGridTextColumn Binding="{Binding Players.Count}" Header="Players"  Width="50"/>
				<DataGridTextColumn Binding="{Binding Ping}" Header="Ping" Width="50" />
			</DataGrid.Columns>
		</DataGrid>
		
		-->
	</Grid>
</Window>
