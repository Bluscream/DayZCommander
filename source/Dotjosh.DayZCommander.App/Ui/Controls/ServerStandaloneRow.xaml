<UserControl x:Class="Dotjosh.DayZCommander.App.Ui.Controls.ServerStandaloneRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:Dotjosh.DayZCommander.App.Ui.Controls" mc:Ignorable="d" 
			 HorizontalAlignment="Stretch"
			 HorizontalContentAlignment="Stretch"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid VerticalAlignment="Center"
		  HorizontalAlignment="Stretch">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions> 
		
		<Controls:FavoriteControl Grid.Column="0"
								   VerticalAlignment="Center"
								  HorizontalAlignment="Left"
								   Margin="1 3 0 3"
								  HorizontalContentAlignment="Left"
								  Width="30"/>
		<TextBlock Text="{Binding Name}"
				   Margin="0 0 0 0"
				    Grid.Column="1"
				    VerticalAlignment="Center"
				    Foreground="{Binding IsSameArmaAndDayZVersion, Converter={StaticResource VersionMatchesToForegroundConverter}}"/>
    	<Controls:VersionControl  Grid.Column="2"
    	                          VerticalAlignment="Center"
    	                          Width="100"/>
    	<Controls:ServerSettingsControl  Grid.Column="3"
										 HorizontalAlignment="Center"
										  VerticalAlignment="Center"
										 Margin="0 0 0 0"
										 Width="130"/>
    	<Controls:TimeControl  Grid.Column="4"
							    VerticalAlignment="Center"
							   Width="80"/>
		<Controls:PlayersControl  Grid.Column="5" 
								   VerticalAlignment="Center"
								  Width="66"/>
		<Controls:PingControl  Grid.Column="6"
							    VerticalAlignment="Center"
							   Width="70"/>
		<Controls:RefreshServerControl  Grid.Column="7"
							   Margin="0 0 6 0"
							    VerticalAlignment="Center"
							   Width="32"/>
    </Grid>
</UserControl>
